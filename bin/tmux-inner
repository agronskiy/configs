#!/usr/bin/env bash
#
# Makes tmux have Ctrl-B as prefix and slightly different scheme (e.g. when ssh-ing from)
# local tmux into remote tmux to make those two different

tmux unbind C-f
tmux set-option -g prefix C-b
tmux bind-key C-b send-prefix

tmux set status-bg colour153

# For some reason this plugin keeps highlighting with the old "^F" sign corresponding to Ctrl-F
# Workaround is to recreate status bar (see tmux.conf for the status setting
tmux set -g status-right '#{prefix_highlight} | %a %Y-%m-%d %H:%M'
$HOME/.tmux/plugins/tmux-prefix-highlight/prefix_highlight.tmux

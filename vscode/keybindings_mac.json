~/Library/Application Support/Code/User/keybindings.json

// Place your key bindings in this file to override the defaults
[
    // Keybindings that are complementary
    { "key": "meta+alt+o h",          "command": "org.insertHeadingRespectContent",
        "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o s",          "command": "org.insertSubheading",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o shift+d",    "command": "org.doDemote",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o shift+p",    "command": "org.doPromote",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o p",          "command": "org.promoteSubtree",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o d",          "command": "org.demoteSubtree",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o t",          "command": "org.timestamp",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o meta+i",     "command": "org.clockin",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o meta+o",     "command": "org.clockout",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o meta+u",     "command": "org.updateclock",
            "when": "editorLangId == 'org'" },
    { "key": "alt+right",             "command": "org.incrementContext",
            "when": "editorLangId == 'org'" },
    { "key": "alt+left",              "command": "org.decrementContext",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o b",          "command": "org.bold",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o i",          "command": "org.italic",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o u",          "command": "org.underline",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o c",          "command": "org.code",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o v",          "command": "org.verbose",
            "when": "editorLangId == 'org'" },
    { "key": "meta+alt+o l",          "command": "org.literal",
            "when": "editorLangId == 'org'" },
]